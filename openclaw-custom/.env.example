# Mission Control live data (always true â€” backend required)
REACT_APP_MC_LIVE_DATA=true

# REST API base URL (standalone custom backend)
REACT_APP_MC_API_BASE_URL=http://localhost:8797

# Optional explicit WebSocket URL (if omitted, inferred from API base URL)
REACT_APP_MC_WS_URL=ws://localhost:8797

# API timeout in milliseconds
REACT_APP_MC_API_TIMEOUT_MS=120000

# Standalone mode keeps the app fully self-contained (no external CLI required)
MC_STANDALONE_MODE=true

# Workspace scanned for local files/tasks in standalone mode ('.' uses this folder)
MC_WORKSPACE_DIR=.

# Optional agent identity and timeout
MC_AGENT_ID=main
MC_AGENT_TIMEOUT_MS=120000

# Telegram Integration (set these to enable)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
